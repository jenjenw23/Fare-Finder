{{> header}}
<div class="container">
  <div class="row" style="margin-top: 15px;">
    <div class="col-lg-12 text-center">
      <h2>Sign Up</h2>
    </div>
  </div>
  <div class="row" style="margin-top: 15px;">
    <div class="col-lg-4"></div>
    <div class="col-lg-8">
      <form class="create-form">
        <div class="form-group">
          <label for="InputName">Name</label>
          <br/>
          <input type="name" name="name" class="form-control" id="InputName" aria-describedby="emailHelp" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="InputEmail">Email address</label>
          <br/>
          <input type="email" email="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter email"> {{!--
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> --}}
        </div>
        <div class="form-group">
          <label for="InputPassword">Password</label>
          <br/>
          <input type="password" password="password" class="form-control" id="InputPassword" placeholder="Password">
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <p>&nbsp;</p>
      <p>&nbsp;</p>
      <p>&nbsp;</p>
    </div>
  </div>
</div>
{{> footer}}